{
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview"
    },
    "dependencies": {
        "vue": "^3.2.37",
        "vue-i18n": "^9.2.2"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^3.0.0",
        "eslint": "^8.22.0",
        "eslint-plugin-vue": "^9.3.0",
        "vite": "^3.0.0"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:vue/base",
            "plugin:vue/vue3-strongly-recommended"
        ],
        "rules": {
            "vue/html-indent": [
                "error",
                4
            ],
            "semi": [
                "error",
                "always"
            ],
            "quotes": [
                "error",
                "single",
                {
                    "avoidEscape": true
                }
            ]
        }
    }
}